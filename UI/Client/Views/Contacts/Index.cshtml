@using Client.Models.Responses
@model List<ContactListDto>

@{
    ViewData["Title"] = "Contacts";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Contacts</h2>
    <a class="btn btn-primary" asp-controller="Contacts" asp-action="Create">New Contact</a>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">No contacts yet.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Company</th>
                <th>Created At</th>
                <th class="text-end" style="width: 220px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.FirstName @c.LastName</td>
                    <td>@c.Company</td>
                    <td>@c.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Contacts" asp-action="Details" asp-route-id="@c.Id">
                            Details
                        </a>
                        <form asp-controller="Contacts" asp-action="Delete" asp-route-id="@c.Id"
                              method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger ms-1">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
